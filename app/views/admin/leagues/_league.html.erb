
<div class="col-md-6">
  <h2><%=league.name%></h2>
</div>
<div class="col-md-6">
  <%= form_tag admin_league_conferences_path(league.id), method: :post do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
    <%= submit_tag "Add Conference", class: "btn btn-primary" %>
    <% end %>
    <%= link_to "Delete", admin_league_path(league.id), method: :delete %>
</div>

<table class='table'>
  <% league.conferences.each do |conference| %>
    <tr>
      <td>
          <%=conference.name%>
      </td>
    </tr>
  <% end %>

</table>
